# =============================================================================
# Link Flame Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# SQLite (Development - default)
DATABASE_URL="file:./prisma/dev.db"

# PostgreSQL (Production - recommended)
# DATABASE_URL="postgresql://user:password@localhost:5432/linkflame?schema=public"

# -----------------------------------------------------------------------------
# Authentication - NextAuth v5 (https://next-auth.js.org)
# -----------------------------------------------------------------------------
# Generate NEXTAUTH_SECRET with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here_min_32_chars
NEXTAUTH_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Payments - Stripe (https://stripe.com)
# -----------------------------------------------------------------------------
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Webhook Secret - Get from: https://dashboard.stripe.com/webhooks
# Used to verify webhook signatures for security
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# -----------------------------------------------------------------------------
# Rate Limiting - Upstash Redis (https://upstash.com) [OPTIONAL]
# -----------------------------------------------------------------------------
# Used for API rate limiting. If not provided, rate limiting is disabled.
# Get these from: https://console.upstash.com
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token

# -----------------------------------------------------------------------------
# Email Service - Resend (https://resend.com) [OPTIONAL]
# -----------------------------------------------------------------------------
# Used for sending transactional emails (order confirmations, contact form, newsletter)
# If not provided, emails will not be sent (feature gracefully disabled)
# Get your API key from: https://resend.com/api-keys
# Free tier: 100 emails/day, 3,000 emails/month
RESEND_API_KEY=re_your_resend_api_key_here

# Email addresses (optional - defaults provided)
EMAIL_FROM=noreply@linkflame.com  # Must be a verified domain in Resend
ADMIN_EMAIL=admin@linkflame.com   # Where contact form notifications are sent

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Base URL for your application (used for callbacks, emails, SEO, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000
# For production: NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Site name (used in SEO metadata)
NEXT_PUBLIC_SITE_NAME="Link Flame"

# Twitter handle (used in Twitter Card metadata)
NEXT_PUBLIC_TWITTER_HANDLE="@linkflame"